# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize values

# Project Configuration
project_name       = "ejbca-platform"
environment        = "dev"
azure_region       = "eastus"
use_random_suffix  = true

# AKS Configuration
aks_kubernetes_version  = "1.28"
aks_node_count          = 3
aks_node_vm_size        = "Standard_D4s_v3"
aks_enable_auto_scaling = true
aks_min_node_count      = 2
aks_max_node_count      = 10
enable_azure_policy     = true
enable_oms_agent        = true

# Network Configuration
vnet_address_space              = ["10.0.0.0/16"]
aks_subnet_address_prefix       = "10.0.1.0/24"
services_subnet_address_prefix  = "10.0.2.0/24"
database_subnet_address_prefix  = "10.0.3.0/24"
vpn_gateway_subnet_address_prefix = "10.0.255.0/27"

# Key Vault Configuration
keyvault_sku                        = "standard"
keyvault_enabled_for_disk_encryption = true
keyvault_soft_delete_retention_days  = 90

# Storage Configuration
storage_account_tier             = "Standard"
storage_account_replication_type = "GRS"

# PostgreSQL Configuration
postgresql_version                     = "15"
postgresql_sku_name                    = "GP_Standard_D4s_v3"
postgresql_storage_mb                  = 131072
postgresql_backup_retention_days       = 30
postgresql_geo_redundant_backup_enabled = true

# Container Registry Configuration
acr_sku = "Premium"

# Windows Server Configuration
windows_vm_size        = "Standard_D4s_v3"
windows_admin_username = "adminuser"

# RHEL Configuration
rhel_vm_size        = "Standard_D4s_v3"
rhel_admin_username = "adminuser"

# Tags
tags = {
  Department  = "IT Security"
  CostCenter  = "PKI-Operations"
  Contact     = "pki-admin@example.com"
}

